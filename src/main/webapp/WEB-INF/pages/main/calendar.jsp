            <label id="calendar-title" style="font-size: 25px" class="pull-left"></label>
        </div>
        <div class="col-lg-6">
            <div class="btn-group">
                <button data-calendar-nav="prev" class="btn btn-warning"><i class="glyphicon glyphicon-circle-arrow-left"></i></button>
